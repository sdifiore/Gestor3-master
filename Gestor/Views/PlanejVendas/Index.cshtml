@model IQueryable<Gestor.Models.Categoria>
@{
    ViewBag.Title = "Filtros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Filtros</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6">
            <h3>Categoria</h3>

            @{
                int i = -1;
                bool status = (bool)ViewBag.Status;
            }
            @foreach (var item in Model)
            {
                <p>
                    @{
                        i++;
                        string nome = $"cb{i.ToString()}";
                    }
                    <div class="form-check">
                        @Html.CheckBox(nome, status, new { @class = "form-check-input" })
                        @Html.Label(item.Descricao, new { @class = "form-check-label"})
                    </div>
                </p>
            }
        </div>

        <div class="col-md-6">
            <h3>Ativo</h3>
            <div class="form-check">
                @Html.CheckBox("Ativo", status, new { @class = "form-check-input" })
                @Html.Label("Ativo", new { @class = "form-check-label" })
            </div>
            <div class="form-check">
                @Html.CheckBox("Descontinuado", false, new { @class = "form-check-input" })
                @Html.Label("Descontinuado", new { @class = "form-check-label" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Continuar" class="btn btn-default" />
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}