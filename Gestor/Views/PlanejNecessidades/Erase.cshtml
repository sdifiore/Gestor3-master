@model Gestor.Models.Estrutura

@{
    ViewBag.Title = "Confirmar Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Confirmar Eliminar</h2>
<h3>ATENÇÂO: Eliminar Planejamento de Necessidades elimina a Estrutura associada!</h3>
<h3>CONFIRMA que realmente deseja eliminar o registro?</h3>
<br />

@Html.Partial("Common")
@using (Html.BeginForm("Erase", "PlanejNecessidades", new { Id = Model.Id }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Eliminar" class="btn btn-default" /> |
        @Html.ActionLink("Retornar a lista sem eliminar", "Index")
    </div>
}
