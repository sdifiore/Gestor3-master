@model IEnumerable<Gestor.Models.ResinaPtfe>

@using X.PagedList.Mvc;
@using X.PagedList;

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IPagedList<Gestor.Models.ResinaPtfe> resinas = ViewBag.OnePageHistory;
}
<h2>Índice</h2>
<p>
    @Html.ActionLink("Criar nova resina PTFE", "Create")
</p>
@using (Html.BeginForm("Search", "ResinaPtfe", FormMethod.Post))
{
    <p>
        Referência: @Html.TextBox("search")
        <input type="submit" value="Procurar" />
    </p>
}
<table class="table table-hover">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Ref)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Referencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fabricante.Apelido)
        </th>
        <th>
            Tipo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Insumo.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Insumo.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Custo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxRr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Classificacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxRrAntiga)
        </th>
        <th></th>
    </tr>
    @foreach (var item in resinas)
    {
        <tr>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id })<br />
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })<br />
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ref)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Referencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fabricante.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResinaBase.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insumo.Apelido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insumo.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Custo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxRr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Classificacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxRrAntiga)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id })<br />
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })<br />
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)ViewBag.OnePageHistory, page => Url.Action("Index", new { page }))