@model IEnumerable<Gestor.Models.Cotacao>

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Índice</h2>

<p>
    @Html.ActionLink("Criar nova cotação", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Produto.Apelido)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Produto.Descricao)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Apelido)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Produto.Descricao)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DateTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id=item.CotacaoId })
            @Html.ActionLink("Detalhes", "Details", new { id=item.CotacaoId })
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CotacaoId })
        </td>
    </tr>
}

</table>
