@model IEnumerable<Gestor.Models.DespesaFixa>
@using X.PagedList.Mvc;
@using X.PagedList;

@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IPagedList<Gestor.Models.DespesaFixa> desps = ViewBag.OnePageHistory;
}
<h2>Índice</h2>
<p>
    @Html.ActionLink("Criar nova despesa fixa", "Create")
</p>

@using (Html.BeginForm("Search", "DespesasFixas", FormMethod.Post))
{
    <p>
        Histórico: @Html.TextBox("search")
        <input type="submit" value="Procurar" />
    </p>
}


<table class="table table-hover">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Despesa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodCrit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CriterioRateio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioFitas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioTuboCordaoPerfil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioFiotec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioFioGaxPtfePuro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioFioGaxPtfeGraf)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioGraxa)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.RateioSucatas)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.RateioRevenda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Somas)
        </th>
        <th></th>
    </tr>
    @foreach (var item in desps)
    {
        <tr>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                @Html.ActionLink("Elimninar", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Despesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodCrit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CriterioRateio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioFitas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioTuboCordaoPerfil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioFiotec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioFioGaxPtfePuro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioFioGaxPtfeGraf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RateioGraxa)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.RateioSucatas)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.RateioRevenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Somas)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Edit", new { id = item.Id })
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                @Html.ActionLink("Elimninar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)ViewBag.OnePageHistory, page => Url.Action("Index", new { page }))