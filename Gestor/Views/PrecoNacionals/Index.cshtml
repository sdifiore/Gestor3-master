@model IEnumerable<Gestor.Models.PrecoNacional>
@using X.PagedList.Mvc;
@using X.PagedList;
@{
    ViewBag.Title = "Índice";
    Layout = "~/Views/Shared/_Layout.cshtml";
    IPagedList<Gestor.Models.PrecoNacional> precos = ViewBag.OnePageHistory;
}
<h2>Índice</h2>
<p>
    @Html.ActionLink("Novo preço nacional", "Create")
</p>
@using (Html.BeginForm("Search", "PrecoNacional", FormMethod.Post))
{
    <p>
        Código: @Html.TextBox("search")
        <input type="submit" value="Procurar" />
    </p>
}
<table class="table table-hover">
    <tr>
        <th></th>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.LinhaUn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ipi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtUnid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoProducao.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I18Nivel1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I18Nivel2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I18Nivel3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I12Nivel1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I12Nivel2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I12Nivel3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I7Nivel1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I7Nivel2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.I7Nivel3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Com)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LlMin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecoRefer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AplicRoteiro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoDireto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RateioCustoFixo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Aumento)
        </th>
        <th></th>
    </tr>
    @foreach (var item in precos)
    {
        <tr>
            @if (item.Descricao != "--")
            {
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id })<br />
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id })<br />
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            }
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.LinhaUn)
            </td>
            @if (item.Descricao != "--")
            {
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apelido)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Ipi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QtUnid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoProducao.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I18Nivel1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I18Nivel2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I18Nivel3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I12Nivel1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I12Nivel2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I12Nivel3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I7Nivel1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I7Nivel2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.I7Nivel3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Com)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LlMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecoRefer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AplicRoteiro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustoDireto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RateioCustoFixo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aumento)
                </td>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.Id })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>

@Html.PagedListPager((IPagedList)ViewBag.OnePageHistory, page => Url.Action("Index", new { page }))